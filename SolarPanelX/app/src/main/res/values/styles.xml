    <!-- Base application theme. -->
    <style name="AppTheme" parent="Theme.AppCompat.NoActionBar">
        <!-- Customize your theme here. -->
        <item name="fontFamily">@font/montserrat</item>
        <item name="colorPrimary">@color/black_spoke</item>
        <item name="colorPrimaryDark">@color/black</item>
        <item name="colorAccent">@color/redx</item>
        <item name="android:textColor">@color/black</item>

    </style>

    <style name="AppTheme.splashScreenTheme" parent="AppTheme">
        <item name="drawerArrowStyle">@style/DrawerIconStyle</item>
        <!--&gt;>>>>>> experimental-->
<!--        <item name="android:windowBackground">@drawable/splash_image</item>-->
        <item name="android:statusBarColor" tools:ignore="NewApi" tools:targetApi="lollipop">@color/black</item>
    </style>

    <style name="AppTheme.ConfirmFragment" parent="AppTheme">
        <item name="drawerArrowStyle">@style/DrawerIconStyle</item>
        <!--&gt;>>>>>> experimental-->
        <item name="android:textColor">@color/purple_500</item>
    </style>

    <style name="AppTheme.TextView" parent="AppTheme">
        <item name="android:fontFamily">@font/montserrat</item>

    </style>

    <style name="spinnerTheme">
        <item name="android:textColor">@color/hint_white</item>

    </style>

    //Toolbar
    <style name="DrawerIconStyle" parent="Widget.AppCompat.DrawerArrowToggle">
        <item name="color">@color/white</item>
        <item name="iconTint">@color/black</item>

    </style>
    <style name="ButtonText" parent="@android:style/Widget.Button">
        <item name="android:textColor">@color/white</item>
        <item name="android:colorBackground">@color/black_spoke</item>

        <item name="android:background">@drawable/ic_baseline_three_lines</item><!-- only way to change this is to change the src image -->
    </style>

