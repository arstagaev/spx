<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/white"
    tools:context=".feature_modules.optimaltilt_machine.OptimalOrientationHelperActivity">

    <TextView
        android:id="@+id/textView6"
        android:layout_width="155dp"
        android:layout_height="82dp"
        android:layout_marginStart="16dp"
        android:layout_marginTop="84dp"
        android:gravity="center"
        android:fontFamily="@font/montserrat"
        android:text="@string/at_find_optimal_azimuth"
        android:textColor="@color/black"
        android:textSize="20sp"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/textView8">

    </TextView>

    <TextView
        android:id="@+id/textView8"
        android:layout_width="382dp"
        android:layout_height="wrap_content"
        android:layout_marginTop="16dp"
        android:gravity="center"
        android:fontFamily="@font/montserrat"
        android:textColor="@color/black"
        android:text="@string/orientation_of_phone"
        android:textSize="25sp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.551"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent">

    </TextView>

    <TextView
        android:id="@+id/textView7"
        android:layout_width="155dp"
        android:layout_height="82dp"
        android:layout_marginStart="16dp"
        android:layout_marginTop="118dp"
        android:gravity="center"
        android:text="@string/at_find_optimal_tilt"
        android:textColor="@color/black"
        android:textSize="20sp"
        android:fontFamily="@font/montserrat"
        app:layout_constraintBottom_toBottomOf="@+id/helper_phone_tilt"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/textView6"
        app:layout_constraintVertical_bias="0.344">

    </TextView>

    <ImageView
        android:id="@+id/helper_phone_azimuth"
        android:layout_width="167dp"
        android:layout_height="165dp"
        android:layout_marginTop="48dp"
        android:src="@drawable/sm_ic_ph_frontview"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.356"
        app:layout_constraintStart_toEndOf="@+id/textView6"
        app:layout_constraintTop_toBottomOf="@+id/textView8">

    </ImageView>

    <ImageView
        android:id="@+id/helper_phone_tilt"
        android:layout_width="159dp"
        android:layout_height="159dp"
        android:layout_marginStart="20dp"
        android:layout_marginTop="52dp"
        android:src="@drawable/sm_ic_ico_phn_sideview"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.088"
        app:layout_constraintStart_toEndOf="@+id/textView7"
        app:layout_constraintTop_toBottomOf="@+id/helper_phone_azimuth">
    </ImageView>

    <Button
        android:id="@+id/btnNextAfterOrientation"
        android:layout_width="120dp"
        android:layout_height="60dp"
        android:layout_marginTop="48dp"
        android:backgroundTint="#FFFFFF"
        android:elevation="145dp"
        android:text="@string/next"
        android:textAllCaps="false"
        android:textColor="@color/black"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.498"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/helper_phone_tilt"
        app:layout_constraintVertical_bias="0.42">

    </Button>

</androidx.constraintlayout.widget.ConstraintLayout>