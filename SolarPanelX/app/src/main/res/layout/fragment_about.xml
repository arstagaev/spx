<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/backof_aboutscreen"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/white"
    tools:context=".ui.fragments.features.AboutFragment">

    <androidx.cardview.widget.CardView
        android:id="@+id/cardView4"
        android:layout_width="200dp"
        android:layout_height="200dp"
        android:layout_marginTop="48dp"
        app:cardCornerRadius="20dp"
        app:cardElevation="40dp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.497"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent">

        <ImageView
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:src="@drawable/sunx">

        </ImageView>

    </androidx.cardview.widget.CardView>

    <TextView
        android:id="@+id/shieldik"
        android:layout_width="404dp"
        android:layout_height="wrap_content"
        android:layout_marginTop="4dp"
        android:fontFamily="@font/montserrat"
        android:gravity="center"
        android:text="Solar Panel X \n version NNN"
        android:textColor="@color/black"
        android:textSize="30sp"
        android:textStyle="bold"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.428"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/cardView4" />

    <androidx.constraintlayout.helper.widget.Flow
        android:layout_width="379dp"
        android:layout_height="wrap_content"
        android:layout_marginTop="32dp"
        android:orientation="vertical"
        app:flow_verticalGap="10dp"
        app:flow_verticalStyle="packed"
        app:barrierMargin="20dp"
        app:constraint_referenced_ids="textView12,twi_go_site,about_special_thanks"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/shieldik" />

    <TextView
        android:id="@+id/textView12"
        android:layout_width="344dp"
        android:layout_height="68dp"
        android:fontFamily="@font/montserrat"
        android:gravity="center"
        android:text="ðŸŒour site: revolna.com"
        android:textColor="@color/hint_white"
        android:textSize="20sp" />

    <TextView
        android:id="@+id/twi_go_site"
        android:layout_width="344dp"
        android:layout_height="64dp"
        android:fontFamily="@font/montserrat"
        android:gravity="center"
        android:text="@string/twitter_of_author"
        android:textColor="@color/hint_white"
        android:textSize="25sp" />

    <TextView
        android:id="@+id/about_special_thanks"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:fontFamily="@font/montserrat"
        android:gravity="center"
        android:text="@string/about_special_thanks"
        android:textColor="@color/black_night"
        android:textSize="25sp"/>


</androidx.constraintlayout.widget.ConstraintLayout>