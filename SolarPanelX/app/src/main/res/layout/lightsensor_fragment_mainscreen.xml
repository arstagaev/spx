    <LinearLayout
        android:id="@+id/linearLayout"
        android:layout_width="match_parent"
        android:layout_height="45dp"
        android:orientation="horizontal"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent">

        <TextView
            android:id="@+id/solar_radiation"
            style="@style/AppTheme.TextView"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_weight="2"
            android:gravity="center"
            android:text="@string/light_sensor_sign_nominal_power"
            android:textColor="@color/black"
            android:textSize="10sp">

        </TextView>

        <EditText
            android:id="@+id/input_nominal_for_sensor"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_weight="2"
            android:inputType="number"
            android:maxLength="7"
            android:text="1000"
            android:textColor="@color/black_spoke"
            android:textColorHint="@color/white"
            android:textSize="12sp">

        </EditText>

        <TextView
            android:id="@+id/textView"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_weight="2"
            android:gravity="center"
            android:text="@string/light_sensor_sign_calibrate_mode"
            android:textColor="@color/black_spoke"
            android:textSize="10sp" />

        <ToggleButton
            android:id="@+id/toggleButton"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_weight="2"
            android:outlineAmbientShadowColor="@color/greenx"
            android:outlineSpotShadowColor="@color/redx"
            android:text="ToggleButton"
            android:textSize="12sp" />


    </LinearLayout>

    <TextView
        android:id="@+id/exchange_rate"
        style="@style/AppTheme.TextView"
        android:layout_width="373dp"
        android:layout_height="38dp"
        android:layout_marginTop="48dp"
        android:gravity="center"

        android:text=" 10K Lux = Solar Panel works at --%"
        android:textColor="@color/black_spoke"
        android:textSize="12sp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent">

    </TextView>

    <RelativeLayout
        android:id="@+id/relativeLayout"
        android:layout_width="329dp"
        android:layout_height="328dp"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/flow3"
        app:layout_constraintVertical_bias="0.089">
        <io.feeeei.circleseekbar.CircleSeekBar
            android:id="@+id/circleseekbar"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:foregroundGravity="center"
            app:wheel_reached_color="#C30505"
            app:wheel_unreached_color="#8BA0AA" />

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_alignStart="@+id/circleseekbar"
            android:layout_alignEnd="@+id/circleseekbar"
            android:layout_alignBottom="@+id/circleseekbar"
            android:orientation="vertical">

            <TextView
                android:id="@+id/calibrate_coeff"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:layout_marginLeft="0dp"
                android:layout_marginRight="0dp"
                android:layout_marginBottom="0dp"
                android:layout_weight="1"
                android:fontFamily="@font/montserrat"
                android:gravity="bottom|center"
                android:text="10K lux = 20%"
                android:textColor="@color/black"
                android:textSize="18sp">

            </TextView>


            <TextView
                android:id="@+id/calibrate_coeff2"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:layout_marginLeft="0dp"
                android:layout_marginRight="0dp"
                android:layout_marginBottom="0dp"
                android:layout_weight="1"
                android:fontFamily="@font/montserrat"
                android:gravity="top|center"
                android:text="converted: \n---W"
                android:textColor="@color/hint_white2"
                android:textSize="20sp">

            </TextView>
        </LinearLayout>


    </RelativeLayout>

    <ImageView
        android:id="@+id/undo_button_light_sensor"
        android:layout_width="42dp"
        android:layout_height="43dp"
        android:layout_marginStart="12dp"
        android:layout_marginTop="8dp"
        android:background="@drawable/ic_undo"
        android:backgroundTint="@color/redx"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/relativeLayout">

    </ImageView>

    <TextView
        android:id="@+id/watts_indicator_sign"
        android:layout_width="50dp"
        android:layout_height="60dp"
        android:gravity="left|center"
        android:text="[Watts]"
        android:textColor="@color/day_sun_zenith"
        android:textSize="10sp"
        tools:layout_editor_absoluteX="274dp"
        tools:layout_editor_absoluteY="86dp">

    </TextView>

    <TextView
        android:id="@+id/lux_describe_about_nominal_power"
        android:layout_width="48dp"
        android:layout_height="54dp"
        android:layout_marginEnd="40dp"
        android:gravity="left|center"
        android:text="[Lux]"
        android:textColor="@color/day_sun_zenith"
        android:textSize="10sp"
        app:layout_constraintEnd_toEndOf="parent"
        tools:layout_editor_absoluteY="241dp">

    </TextView>

    <TextView
        android:id="@+id/sensor_raw_indicator"
        android:layout_width="wrap_content"
        android:layout_height="60dp"
        android:layout_row="0"
        android:layout_column="0"
        android:gravity="center"
        android:text="0 \n raw value of sensor"
        android:textColor="@color/hint_white"
        android:textSize="10sp">

    </TextView>

    <TextView
        android:id="@+id/min_indicator"
        android:layout_width="60dp"
        android:layout_height="60dp"
        android:layout_row="0"
        android:layout_column="1"
        android:gravity="center"
        android:text="0 \n min"
        android:textColor="@color/light_sensor_green_raw"
        android:textSize="10sp">

    </TextView>


    <TextView
        android:id="@+id/max_indicator"
        android:layout_width="60dp"
        android:layout_height="60dp"
        android:layout_row="0"
        android:layout_column="2"
        android:gravity="center"
        android:text="10 \n max"
        android:textColor="@color/light_sensor_red_raw"
        android:textSize="10sp">

    </TextView>

    <ImageView
        android:id="@+id/helper_light_sensor"
        android:layout_width="40dp"
        android:layout_height="40dp"
        android:layout_marginTop="8dp"
        android:src="@drawable/ic_help"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.949"
        app:layout_constraintStart_toEndOf="@+id/undo_button_light_sensor"
        app:layout_constraintTop_toBottomOf="@+id/relativeLayout">

    </ImageView>

    <androidx.constraintlayout.widget.ConstraintLayout
        android:id="@+id/helper_layout"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:background="#C1000000"
        android:visibility="gone"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent">

        <ImageView
            android:id="@+id/second_sol_pan_help_img"
            android:layout_width="60dp"
            android:layout_height="60dp"
            android:layout_marginStart="64dp"
            android:layout_marginTop="48dp"
            android:src="@drawable/sm_ic_arrowcompass"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent" />

        <ImageView
            android:layout_width="60dp"
            android:layout_height="60dp"
            android:layout_marginStart="164dp"
            android:layout_marginTop="48dp"

            android:src="@drawable/sm_ic_arrowcompass"
            app:layout_constraintStart_toEndOf="@+id/second_sol_pan_help_img"
            app:layout_constraintTop_toTopOf="parent" />

        <TextView
            android:id="@+id/textView2"
            android:layout_width="164dp"
            android:layout_height="142dp"
            android:layout_marginStart="12dp"
            android:layout_marginTop="96dp"
            android:gravity="center"
            android:text="[1st step]: \nset Nominal Power of Solar Panel"
            android:textColor="@color/white"
            android:textSize="20dp"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent">

        </TextView>

        <TextView
            android:layout_width="164dp"
            android:layout_height="142dp"
            android:layout_marginTop="96dp"
            android:gravity="center"
            android:text="[2nd step]: \nenable calibration mode"
            android:textColor="@color/white"
            android:textSize="20dp"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintHorizontal_bias="1.0"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent">

        </TextView>

        <TextView
            android:layout_width="293dp"
            android:layout_height="166dp"
            android:layout_marginTop="260dp"
            android:gravity="center"
            android:text="[3rd step]: \nCompare current power generation with luminance factor [Lux], and disable calibration mode"
            android:textColor="@color/white"
            android:textSize="20dp"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintHorizontal_bias="0.478"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent">

        </TextView>


    </androidx.constraintlayout.widget.ConstraintLayout>

    <androidx.constraintlayout.widget.ConstraintLayout
        android:id="@+id/light_sensor_debug_console"
        android:layout_width="match_parent"
        android:layout_height="200dp"
        android:background="#802C69D3"
        android:visibility="gone"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintStart_toStartOf="parent">


        <SeekBar
            android:id="@+id/seekbar_for_debug"
            style="@style/Widget.AppCompat.SeekBar.Discrete"
            android:layout_width="300dp"
            android:layout_height="wrap_content"
            android:max="100"
            android:progress="0"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent" />

        <TextView
            android:layout_width="match_parent"
            android:layout_height="60dp"
            android:gravity="center"
            android:text="DEBUG MODE"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent">

        </TextView>

    </androidx.constraintlayout.widget.ConstraintLayout>

    <androidx.constraintlayout.helper.widget.Flow
        android:id="@+id/flow2"
        android:layout_width="294dp"
        android:layout_height="70dp"
        app:constraint_referenced_ids="min_indicator_watts,max_indicator_watts,watts_indicator_sign"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/exchange_rate">

    </androidx.constraintlayout.helper.widget.Flow>

    <androidx.constraintlayout.helper.widget.Flow
        android:id="@+id/flow3"
        android:layout_width="346dp"
        android:layout_height="68dp"
        app:constraint_referenced_ids="sensor_raw_indicator,min_indicator,max_indicator,lux_describe_about_nominal_power"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/flow2">

    </androidx.constraintlayout.helper.widget.Flow>

    <TextView
        android:id="@+id/max_indicator_watts"
        android:layout_width="60dp"
        android:layout_height="60dp"
        android:gravity="center"
        android:text="10 \n max"
        android:textColor="@color/light_sensor_red_finished_data"
        tools:layout_editor_absoluteX="143dp"
        tools:layout_editor_absoluteY="101dp">

    </TextView>

    <TextView
        android:id="@+id/min_indicator_watts"
        android:layout_width="60dp"
        android:layout_height="60dp"
        android:gravity="center"
        android:text="0 \n min"
        android:textColor="@color/light_sensor_green_finished_data"
        tools:layout_editor_absoluteX="72dp"
        tools:layout_editor_absoluteY="101dp">

    </TextView>


