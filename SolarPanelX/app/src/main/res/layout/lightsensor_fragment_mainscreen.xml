    <LinearLayout
        android:id="@+id/linearLayout"
        android:layout_width="match_parent"
        android:layout_height="45dp"
        android:orientation="horizontal"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent">

        <TextView
            android:id="@+id/solar_radiation"
            style="@style/AppTheme.TextView"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_weight="2"
            android:gravity="center"
            android:text="@string/light_sensor_sign_nominal_power"
            android:textColor="@color/white"
            android:textSize="10sp">

        </TextView>

        <EditText
            android:id="@+id/input_nominal_for_sensor"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_weight="2"
            android:inputType="number"
            android:text="1000"
            android:textColor="@color/white"
            android:textColorHint="@color/white"
            android:textSize="12sp">

        </EditText>

        <TextView
            android:id="@+id/textView"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_weight="2"
            android:gravity="center"
            android:text="@string/light_sensor_sign_calibrate_mode"
            android:textColor="#FFFFFF"
            android:textSize="10sp" />

        <ToggleButton
            android:id="@+id/toggleButton"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_weight="2"
            android:outlineAmbientShadowColor="@color/greenx"
            android:outlineSpotShadowColor="@color/redx"
            android:text="ToggleButton"
            android:textSize="12sp" />


    </LinearLayout>

    <TextView
        android:id="@+id/exchange_rate"
        style="@style/AppTheme.TextView"
        android:layout_width="373dp"
        android:layout_height="38dp"
        android:layout_marginTop="48dp"
        android:gravity="center"

        android:text=" 10K Lux = Solar Panel works at --%"
        android:textColor="@color/greenx"
        android:textSize="12sp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent">

    </TextView>

    <RelativeLayout
        android:id="@+id/relativeLayout"
        android:layout_width="329dp"
        android:layout_height="328dp"
        android:layout_marginTop="28dp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/exchange_rate">
        <io.feeeei.circleseekbar.CircleSeekBar
            android:id="@+id/circleseekbar"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:foregroundGravity="center"
            app:wheel_reached_color="#05C324"
            app:wheel_unreached_color="#8BA0AA" />

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:orientation="vertical"
            android:layout_alignStart="@+id/circleseekbar"
            android:layout_alignEnd="@+id/circleseekbar"
            android:layout_alignBottom="@+id/circleseekbar">

            <TextView
                android:id="@+id/calibrate_coeff"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:layout_marginLeft="0dp"
                android:layout_marginRight="0dp"
                android:layout_marginBottom="0dp"
                android:layout_weight="1"
                android:fontFamily="@font/montserrat"
                android:gravity="bottom|center"
                android:text="10K lux = 20%"
                android:textColor="@color/white"
                android:textSize="18sp">

            </TextView>



            <TextView
                android:id="@+id/calibrate_coeff2"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:layout_weight="1"
                android:layout_marginLeft="0dp"
                android:layout_marginRight="0dp"
                android:layout_marginBottom="0dp"
                android:fontFamily="@font/montserrat"
                android:gravity="top|center"
                android:text="converted: \n---W"
                android:textColor="@color/hint_white2"
                android:textSize="20sp">

            </TextView>
        </LinearLayout>


    </RelativeLayout>

    <ImageView
        android:id="@+id/undo_button_light_sensor"
        android:layout_width="42dp"
        android:layout_height="43dp"
        android:layout_marginStart="12dp"
        android:layout_marginTop="8dp"
        android:background="@drawable/ic_undo"
        android:backgroundTint="@color/redx"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/relativeLayout">

    </ImageView>

    <TextView
        android:id="@+id/textView5"
        android:layout_width="50dp"
        android:layout_height="60dp"
        android:layout_marginStart="2dp"
        android:layout_marginTop="444dp"
        android:gravity="left|center"
        android:text="[Watts]"
        android:textColor="@color/white"
        android:textSize="10sp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.127"
        app:layout_constraintStart_toEndOf="@+id/gridLayout"
        app:layout_constraintTop_toTopOf="parent">

    </TextView>

    <TextView
        android:id="@+id/textView3"
        android:layout_width="48dp"
        android:layout_height="54dp"
        android:layout_marginStart="2dp"
        android:layout_marginTop="8dp"
        android:gravity="left|center"
        android:text="[Lux]"
        android:textColor="@color/white"
        android:textSize="10sp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.13"
        app:layout_constraintStart_toEndOf="@+id/gridLayout2"
        app:layout_constraintTop_toBottomOf="@+id/textView5">

    </TextView>

    <GridLayout
        android:id="@+id/gridLayout2"
        android:layout_width="216dp"
        android:layout_height="55dp"
        android:layout_marginTop="68dp"
        android:columnCount="3"
        android:orientation="horizontal"
        android:rowCount="1"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.29"
        app:layout_constraintStart_toEndOf="@id/undo_button_light_sensor"
        app:layout_constraintTop_toBottomOf="@+id/relativeLayout">

        <TextView
            android:id="@+id/sensor_raw_indicator"
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:layout_row="0"
            android:layout_column="0"
            android:gravity="center"
            android:text="0 \n raw value of sensor"
            android:textColor="@color/hint_white"
            android:textSize="10sp">

        </TextView>

        <TextView
            android:id="@+id/min_indicator"
            android:layout_width="60dp"
            android:layout_height="match_parent"
            android:layout_row="0"
            android:layout_column="1"
            android:gravity="center"
            android:text="0 \n min"
            android:textColor="@color/light_sensor_green_raw"
            android:textSize="10sp">

        </TextView>


        <TextView
            android:id="@+id/max_indicator"
            android:layout_width="60dp"
            android:layout_height="match_parent"
            android:layout_row="0"
            android:layout_column="2"
            android:gravity="center"
            android:text="10 \n max"
            android:textColor="@color/light_sensor_red_raw"
            android:textSize="10sp">

        </TextView>


    </GridLayout>

    <GridLayout
        android:id="@+id/gridLayout"
        android:layout_width="130dp"
        android:layout_height="61dp"
        android:layout_marginTop="4dp"
        android:columnCount="2"
        android:orientation="horizontal"
        android:rowCount="1"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.559"
        app:layout_constraintStart_toEndOf="@id/undo_button_light_sensor"
        app:layout_constraintTop_toBottomOf="@+id/relativeLayout">

        <TextView
            android:id="@+id/min_indicator_watts"
            android:layout_width="60dp"
            android:layout_height="match_parent"
            android:layout_row="0"
            android:layout_column="0"
            android:gravity="center"
            android:text="0 \n min"
            android:textColor="@color/light_sensor_green_finished_data">

        </TextView>


        <TextView
            android:id="@+id/max_indicator_watts"
            android:layout_width="60dp"
            android:layout_height="match_parent"
            android:layout_row="0"
            android:layout_column="1"
            android:gravity="center"
            android:text="10 \n max"
            android:textColor="@color/light_sensor_red_finished_data">

        </TextView>


    </GridLayout>

    <ImageView
        android:id="@+id/helper_light_sensor"
        android:layout_width="40dp"
        android:layout_height="40dp"
        android:layout_marginStart="12dp"
        android:layout_marginTop="8dp"
        android:src="@drawable/ic_help"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/undo_button_light_sensor">

    </ImageView>

    <androidx.constraintlayout.widget.ConstraintLayout
        android:id="@+id/helper_layout"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:background="#C1000000"
        android:visibility="gone"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent">

        <ImageView
            android:id="@+id/imageView"
            android:layout_width="60dp"
            android:layout_height="60dp"
            android:layout_marginStart="64dp"
            android:layout_marginTop="48dp"
            android:src="@drawable/sm_ic_arrowcompass"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent" />

        <ImageView
            android:layout_width="60dp"
            android:layout_height="60dp"
            android:layout_marginStart="164dp"
            android:layout_marginTop="48dp"

            android:src="@drawable/sm_ic_arrowcompass"
            app:layout_constraintStart_toEndOf="@+id/imageView"
            app:layout_constraintTop_toTopOf="parent" />

        <TextView
            android:id="@+id/textView2"
            android:layout_width="164dp"
            android:layout_height="142dp"
            android:layout_marginStart="12dp"
            android:layout_marginTop="96dp"
            android:gravity="center"
            android:text="[1st step]: \nset Nominal Power of Solar Panel"
            android:textColor="@color/white"
            android:textSize="20dp"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent">

        </TextView>

        <TextView
            android:layout_width="164dp"
            android:layout_height="142dp"
            android:layout_marginTop="96dp"
            android:gravity="center"
            android:text="[2nd step]: \nenable calibration mode"
            android:textColor="@color/white"
            android:textSize="20dp"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintHorizontal_bias="1.0"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent">

        </TextView>

        <TextView
            android:layout_width="293dp"
            android:layout_height="166dp"
            android:layout_marginTop="260dp"
            android:gravity="center"
            android:text="[3rd step]: \nCompare current power generation with luminance factor [Lux], and disable calibration mode"
            android:textColor="@color/white"
            android:textSize="20dp"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintHorizontal_bias="0.478"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent">

        </TextView>


    </androidx.constraintlayout.widget.ConstraintLayout>

    <androidx.constraintlayout.widget.ConstraintLayout
        android:id="@+id/light_sensor_debug_console"
        android:layout_width="match_parent"
        android:layout_height="200dp"
        android:background="#802C69D3"
        android:visibility="gone"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintStart_toStartOf="parent">


        <SeekBar
            android:id="@+id/seekbar_for_debug"
            style="@style/Widget.AppCompat.SeekBar.Discrete"
            android:layout_width="300dp"
            android:layout_height="wrap_content"
            android:max="100"
            android:progress="0"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent" />

        <TextView
            android:layout_width="match_parent"
            android:layout_height="60dp"
            android:gravity="center"
            android:text="DEBUG MODE"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent">

        </TextView>

    </androidx.constraintlayout.widget.ConstraintLayout>


