<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context="com.revolve44.solarpanelx.feature_modules.optimaltilt_machine.steps.LocationOfPhoneOnSPSurfaceFragment">

    <TextView
        android:layout_width="276dp"
        android:layout_height="38dp"
        android:gravity="center"
        android:text="Calibrating direction/azimuth:"
        android:textColor="@color/black"
        app:layout_constraintBottom_toTopOf="@+id/imageView3"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent">

    </TextView>

    <TextView
        android:id="@+id/textView10"
        android:layout_width="276dp"
        android:layout_height="38dp"
        android:gravity="center"
        android:text="Calibrating tilt:"
        android:textColor="@color/black"
        app:layout_constraintBottom_toTopOf="@+id/imageView"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent">

    </TextView>

    <ImageView
        android:id="@+id/imageView3"
        android:layout_width="289dp"
        android:layout_height="281dp"
        android:layout_marginBottom="24dp"
        android:src="@drawable/sm_right_orient_horizontal"
        app:layout_constraintBottom_toTopOf="@+id/textView10"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent">
    </ImageView>

    <ImageView
        android:id="@+id/imageView"
        android:layout_width="295dp"
        android:layout_height="263dp"
        android:layout_marginBottom="36dp"
        android:src="@drawable/sm_right_orient_vertical"
        app:layout_constraintBottom_toTopOf="@+id/GoToOrientFrag"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent">

    </ImageView>

    <Button
        android:id="@+id/GoToOrientFrag"
        android:layout_width="120dp"
        android:layout_height="60dp"
        android:layout_marginBottom="16dp"
        android:backgroundTint="#FFFFFF"
        android:elevation="20dp"
        android:text="Next"
        android:textAllCaps="false"
        android:textColor="@color/black"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent" />


</androidx.constraintlayout.widget.ConstraintLayout>