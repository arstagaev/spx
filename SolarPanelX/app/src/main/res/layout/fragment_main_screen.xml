<?xml version="1.0" encoding="utf-8"?>
<androidx.swiperefreshlayout.widget.SwipeRefreshLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/swipe_refresh_mainscreen"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    tools:context=".ui.fragments.MainScreenFragment">

    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="wrap_content">

        <androidx.constraintlayout.widget.ConstraintLayout
            android:id="@+id/main_screen_background"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:background="@color/white">

            <TextSwitcher
                android:id="@+id/textSwitcher_main_screen"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_marginStart="20dp"
                android:layout_marginTop="20dp"
                android:fontFamily="@font/montserrat"
                android:text="âš¡Forecast now"
                android:textSize="35sp"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toTopOf="parent" />

            <androidx.cardview.widget.CardView
                android:id="@+id/cardview_forecastnow_mainscreen"
                android:layout_width="0dp"
                android:layout_height="90dp"
                android:layout_marginHorizontal="20dp"
                android:orientation="horizontal"
                app:cardCornerRadius="20dp"
                app:cardElevation="20dp"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintHorizontal_bias="0.0"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toBottomOf="@+id/textSwitcher_main_screen">

                <LinearLayout
                    android:id="@+id/linearlayout_frcst_now"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:background="@color/white">

                    <TextView
                        android:id="@+id/forecast_now_absolute"
                        android:layout_width="match_parent"
                        android:layout_height="match_parent"
                        android:layout_weight="1"
                        android:fontFamily="@font/montserrat"
                        android:gravity="center"
                        android:text="---- W"
                        android:textColor="@color/black_spoke"
                        android:textSize="35sp"
                        android:textStyle="bold">

                    </TextView>

                    <TextView
                        android:id="@+id/forecast_now_relatively"
                        android:layout_width="match_parent"
                        android:layout_height="match_parent"
                        android:layout_weight="1"
                        android:fontFamily="@font/montserrat"
                        android:gravity="center"
                        android:text="--%"
                        android:textColor="@color/purple_700"
                        android:textSize="35sp"
                        android:textStyle="bold">

                    </TextView>
                </LinearLayout>

            </androidx.cardview.widget.CardView>

            <androidx.cardview.widget.CardView
                android:id="@+id/card_item_with_map"
                android:layout_width="340dp"
                android:layout_height="170dp"
                android:layout_marginTop="12dp"
                android:clipChildren="true"
                app:cardCornerRadius="20dp"
                app:layout_constraintEnd_toEndOf="@+id/cardview_forecastnow_mainscreen"
                app:layout_constraintStart_toStartOf="@+id/cardview_forecastnow_mainscreen"
                app:layout_constraintTop_toBottomOf="@+id/cardview_forecastnow_mainscreen">
                <ImageView
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:src="@drawable/ic_day_light_map_five">
<!--                    android:src="@drawable/ic_simple_map_world">-->

                </ImageView>

                <com.revolve44.solarpanelx.ui.customviews.daylightmap.WeatherAnim
                    android:id="@+id/daylightmap"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"

                    app:layout_constraintBottom_toBottomOf="parent"
                    app:layout_constraintEnd_toEndOf="parent"
                    app:layout_constraintHorizontal_bias="0.291"
                    app:layout_constraintStart_toStartOf="parent"
                    app:layout_constraintTop_toTopOf="parent">

                </com.revolve44.solarpanelx.ui.customviews.daylightmap.WeatherAnim>



            </androidx.cardview.widget.CardView>


            <androidx.constraintlayout.helper.widget.Flow
                android:id="@+id/flow"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_marginTop="16dp"
                android:layout_marginHorizontal="5dp"
                android:orientation="vertical"
                app:barrierMargin="20dp"
                app:constraint_referenced_ids="cardview_chart1,cardView_chart2,cardview_chart3,cardview_chart4,cardview_chart5"
                app:flow_verticalGap="10dp"
                app:flow_verticalStyle="packed"

                app:flow_wrapMode="none"
                app:layout_constraintEnd_toEndOf="@+id/cardview_forecastnow_mainscreen"
                app:layout_constraintStart_toStartOf="@+id/cardview_forecastnow_mainscreen"
                app:layout_constraintTop_toBottomOf="@+id/card_item_with_map">


            </androidx.constraintlayout.helper.widget.Flow>

            <androidx.cardview.widget.CardView
                android:id="@+id/cardview_chart1"
                android:layout_width="0dp"
                android:layout_height="166dp"
                app:cardCornerRadius="20dp"
                app:cardBackgroundColor="@color/black_spoke"
                app:layout_constraintEnd_toEndOf="@+id/flow"
                app:layout_constraintHorizontal_bias="0.5"
                app:layout_constraintStart_toStartOf="@+id/flow"
                app:layout_constraintTop_toTopOf="@+id/flow">
                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="20dp"
                    android:layout_marginTop="5dp"
                    android:layout_marginStart="5dp"
                    android:textColor="@color/hint_white2"
                    android:text="@string/watts_sign"
                    android:textSize="8sp">

                </TextView>

                <com.github.mikephil.charting.charts.LineChart
                    android:id="@+id/lineChart1"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:layout_weight="1"
                    app:layout_constraintVertical_chainStyle="spread"
                    tools:ignore="NotSibling" />


            </androidx.cardview.widget.CardView>

            <androidx.cardview.widget.CardView
                android:id="@+id/cardView_chart2"
                android:layout_width="0dp"
                android:layout_height="164dp"
                app:cardCornerRadius="20dp"
                app:layout_constraintEnd_toEndOf="@+id/flow"
                app:layout_constraintStart_toStartOf="@+id/flow"
                app:layout_constraintTop_toBottomOf="@+id/cardview_chart1">
                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="20dp"
                    android:layout_marginTop="5dp"
                    android:layout_marginStart="5dp"
                    android:textColor="@color/hint_white2"
                    android:text="@string/watts_sign"
                    android:textSize="8sp">

                </TextView>
                <com.github.mikephil.charting.charts.LineChart
                    android:id="@+id/lineChart2"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:layout_weight="1"
                    app:layout_constraintVertical_chainStyle="spread"
                    tools:ignore="NotSibling">

                </com.github.mikephil.charting.charts.LineChart>

            </androidx.cardview.widget.CardView>

            <com.revolve44.solarpanelx.domain.westcoast_customs.VerticalTextView
                android:id="@+id/to_tomorrow_chart_forecast"
                android:layout_width="wrap_content"
                android:layout_height="22dp"
                android:gravity="center|bottom"
                android:text="tomorrow"
                android:textColor="@color/black"
                android:textSize="10sp"
                app:layout_constraintVertical_bias="0.5"
                app:layout_constraintBottom_toBottomOf="@+id/cardView_chart2"
                app:layout_constraintEnd_toStartOf="@+id/cardView_chart2"
                app:layout_constraintTop_toTopOf="@+id/cardView_chart2">

            </com.revolve44.solarpanelx.domain.westcoast_customs.VerticalTextView>


            <androidx.cardview.widget.CardView
                android:id="@+id/cardview_chart3"
                android:layout_width="0dp"
                android:layout_height="164dp"
                app:cardCornerRadius="20dp"
                app:layout_constraintEnd_toEndOf="@+id/flow"
                app:layout_constraintStart_toStartOf="@+id/flow"
                app:layout_constraintTop_toBottomOf="@+id/cardView_chart2">
                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="20dp"
                    android:layout_marginTop="5dp"
                    android:layout_marginStart="5dp"
                    android:textColor="@color/hint_white2"
                    android:text="@string/watts_sign"
                    android:textSize="8sp">

                </TextView>
                <com.github.mikephil.charting.charts.LineChart
                    android:id="@+id/lineChart3"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:layout_weight="1"
                    app:layout_constraintVertical_chainStyle="spread"
                    tools:ignore="NotSibling">

                </com.github.mikephil.charting.charts.LineChart>
            </androidx.cardview.widget.CardView>

            <androidx.cardview.widget.CardView
                android:id="@+id/cardview_chart4"
                android:layout_width="0dp"
                android:layout_height="164dp"
                app:cardCornerRadius="20dp"
                app:layout_constraintEnd_toEndOf="@+id/flow"
                app:layout_constraintStart_toStartOf="@+id/flow">
                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="20dp"
                    android:layout_marginTop="5dp"
                    android:layout_marginStart="5dp"
                    android:textColor="@color/hint_white2"
                    android:text="@string/watts_sign"
                    android:textSize="8sp">

                </TextView>
                <com.github.mikephil.charting.charts.LineChart
                    android:id="@+id/lineChart4"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:layout_weight="1"
                    app:layout_constraintVertical_chainStyle="spread"
                    tools:ignore="NotSibling">

                </com.github.mikephil.charting.charts.LineChart>
            </androidx.cardview.widget.CardView>

            <androidx.cardview.widget.CardView
                android:id="@+id/cardview_chart5"
                android:layout_width="0dp"
                android:layout_height="164dp"
                app:cardCornerRadius="20dp"
                app:layout_constraintEnd_toEndOf="@+id/flow"
                app:layout_constraintStart_toStartOf="@+id/flow">
                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="20dp"
                    android:layout_marginTop="5dp"
                    android:layout_marginStart="5dp"
                    android:textColor="@color/hint_white2"
                    android:text="@string/watts_sign"
                    android:textSize="8sp">

                </TextView>
                <com.github.mikephil.charting.charts.LineChart
                    android:id="@+id/lineChart5"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:layout_weight="1"
                    app:layout_constraintVertical_chainStyle="spread"
                    tools:ignore="NotSibling">

                </com.github.mikephil.charting.charts.LineChart>
            </androidx.cardview.widget.CardView>

            <com.revolve44.solarpanelx.domain.westcoast_customs.VerticalTextView
                android:id="@+id/to_after_tomorrow_chart_forecast"
                android:layout_width="wrap_content"
                android:layout_height="22dp"
                android:gravity="center|bottom"
                android:text="after tomorrow"
                android:textColor="@color/black"
                android:textSize="10sp"
                app:layout_constraintVertical_bias="0.5"
                app:layout_constraintBottom_toBottomOf="@+id/cardview_chart3"
                app:layout_constraintEnd_toStartOf="@+id/cardview_chart3"
                app:layout_constraintTop_toTopOf="@+id/cardview_chart3">

            </com.revolve44.solarpanelx.domain.westcoast_customs.VerticalTextView>

            <com.revolve44.solarpanelx.domain.westcoast_customs.VerticalTextView
                android:id="@+id/first_chart_description"
                android:layout_width="wrap_content"
                android:layout_height="22dp"
                android:gravity="center|bottom"
                android:text="at 20 hr"
                android:textColor="@color/black"
                android:textSize="10sp"
                app:layout_constraintBottom_toBottomOf="@+id/cardview_chart1"
                app:layout_constraintEnd_toStartOf="@+id/cardview_chart1"
                app:layout_constraintTop_toTopOf="@+id/flow"
                app:layout_constraintVertical_bias="0.5">

            </com.revolve44.solarpanelx.domain.westcoast_customs.VerticalTextView>

            <com.revolve44.solarpanelx.domain.westcoast_customs.VerticalTextView
                android:id="@+id/to_chart_forecast4"
                android:layout_width="wrap_content"
                android:layout_height="22dp"
                android:gravity="center|bottom"
                android:text="after tomorrow"
                android:textColor="@color/black"
                android:textSize="10sp"
                app:layout_constraintVertical_bias="0.5"
                app:layout_constraintBottom_toBottomOf="@+id/cardview_chart4"
                app:layout_constraintEnd_toStartOf=    "@+id/cardview_chart4"
                app:layout_constraintTop_toTopOf=      "@+id/cardview_chart4">
            </com.revolve44.solarpanelx.domain.westcoast_customs.VerticalTextView>

            <com.revolve44.solarpanelx.domain.westcoast_customs.VerticalTextView
                android:id="@+id/to_chart_forecast5"
                android:layout_width="wrap_content"
                android:layout_height="22dp"
                android:gravity="center|bottom"
                android:text="after tomorrow"
                android:textColor="@color/black"
                android:textSize="10sp"
                app:layout_constraintVertical_bias="0.5"
                app:layout_constraintBottom_toBottomOf="@+id/cardview_chart5"
                app:layout_constraintEnd_toStartOf=    "@+id/cardview_chart5"
                app:layout_constraintTop_toTopOf=      "@+id/cardview_chart5">
            </com.revolve44.solarpanelx.domain.westcoast_customs.VerticalTextView>


            <androidx.cardview.widget.CardView
                android:id="@+id/sunshine_duration_sigh"
                android:layout_width="0dp"
                android:layout_height="90dp"
                android:orientation="horizontal"
                android:layout_marginTop="10dp"
                app:cardCornerRadius="20dp"
                app:layout_constraintEnd_toEndOf="@+id/flow"
                app:layout_constraintStart_toStartOf="@+id/flow"
                app:layout_constraintTop_toBottomOf="@+id/flow">

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:background="@color/chart_stroke"
                    android:orientation="horizontal">
                    <TextView
                        android:id="@+id/sunshineIndicatorBlockSUNRISE"
                        android:layout_width="match_parent"
                        android:layout_height="match_parent"
                        android:layout_weight="1"
                        android:fontFamily="@font/montserrat"
                        android:gravity="center"
                        android:text="-:--"
                        android:textColor="@color/black"
                        android:textFontWeight="1"
                        android:textSize="20sp">

                    </TextView>

                    <TextView
                        android:id="@+id/sunshineIndicatorBlockDURATION"
                        android:layout_width="match_parent"
                        android:layout_height="match_parent"
                        android:layout_weight="1"
                        android:fontFamily="@font/montserrat"
                        android:gravity="center"
                        android:text="-hr"
                        android:textColor="@color/black"
                        android:textFontWeight="1"
                        android:textSize="30sp">

                    </TextView>

                    <TextView
                        android:id="@+id/sunshineIndicatorBlockSUNSET"
                        android:layout_width="match_parent"
                        android:layout_height="match_parent"
                        android:layout_weight="1"
                        android:fontFamily="@font/montserrat"
                        android:gravity="center"
                        android:text="-:--"
                        android:textColor="@color/black"
                        android:textFontWeight="1"
                        android:textSize="20sp">

                    </TextView>
                </LinearLayout>
            </androidx.cardview.widget.CardView>

            <LinearLayout
                android:id="@+id/service_sign_from_mainscreen"
                android:layout_width="0dp"
                android:layout_height="40dp"
                android:orientation="horizontal"
                app:layout_constraintEnd_toEndOf="@+id/flow"
                app:layout_constraintStart_toStartOf="@+id/flow"
                app:layout_constraintTop_toBottomOf="@+id/sunshine_duration_sigh">

                <TextView
                    android:id="@+id/last_upd_date"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:gravity="center|top"
                    android:textColor="@color/hint_white"
                    android:text="last update: 12:49, 04 feb 1997">
                </TextView>
            </LinearLayout>




        </androidx.constraintlayout.widget.ConstraintLayout>
    </ScrollView>
</androidx.swiperefreshlayout.widget.SwipeRefreshLayout>